var error = $("#new_dish #error_explanation");
<% if @dish.errors.any? %>
  error.append('<ul>');
  <% @dish.errors.full_messages.each do |msg| %>
    error.append("<li><%= msg %></li>");
  <% end %>
  error.append('</ul>');
<% else %>
  $('#new_item_modal').modal('hide');
  error.empty();
  window.location = "<%= dish_path(@dish) %>";
<% end %>
